<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bookingbook">

    <uses-permission android:name="android.permission.INTERNET" /> <!--인터넷 권한 선언-->

    <application
        android:allowBackup="true"
        android:icon="@drawable/booking_book_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/booking_book_app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".SectionActivity" />
        <activity android:name=".NonFictionActivity" />
        <activity android:name=".NovelActivity" />
        <activity android:name=".BookDetailsActivity" />
    </application>

</manifest>